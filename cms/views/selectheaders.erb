<div id='csvconf'>
  <form name="input" id="csvconf_f" action="/csvheader" method="post">
    <input type="hidden" name="filename" value="<%= @filename %>" />
    <input type="hidden" name="encoding" value="<%= @encoding %>" />
    <input type="hidden" name="layer" value="<%= @layer.id %>" />
    <input type="hidden" name="srid" value="<%= @srid %>" />
    <input type="hidden" name="geometry" value="<%= @geometry_column %>" />
    <input type="hidden" name="geometry_type" value="<%= @geometry_type  %>" />

<h4>Temp. Disabled</h4>
    <div >file: <span style="font-size:120%"><em><%= @original_file %></em></span></div>
      
    
    <table border="0" cellspacing="5" cellpadding="5">
      <tr>
        
        <!-- left side -->
        <td> 
          <table>
            <tr> <td class='tdlabel'>name:</td> <td><%= @name %></td> </tr>
            <tr> <td class='tdlabel'>unique key:</td> <td><%= @unique_id %></td> </tr>
            <% if @sel_x %>
            <tr> <td class='tdlabel'>lat or y field:</td> <td><%= @sel_y %></td> </tr>
            <tr> <td class='tdlabel'>lon or x field:</td> <td><%= @sel_x %></td> </tr>
            <tr> <td class='tdlabel'>srid: (nl28992)</td> <td><input type="text" name="srid", value="<%= @srid %>"/></td> </tr>
            <% else %>
            <tr> <td class='tdlabel'>geometry column:</td> <td><%= @geometry_column %></td> </tr>
            <% end %>
          </table>
        </td>
        
        <!-- right side -->
        <td valign="bottom"> 
          <ul id='tagselectlist'>
          </ul>
          <% nts = "newTagSelect('" + @layerSelect + "')" %>
          <p><a href='#' onclick="<%= nts %>" >add match term</a></p>
        </td>
        
      </tr>
    </table>
    <input class='submitb' type="submit" name='match' value="show match"/>
    <input class='submitb' type="submit" name='add' disabled value="add data"/>
  </form>
  
  <div id='csvconfout'/>
  
  
</div>

<script type="text/javascript" charset="utf-8">
  newTagSelect("<%= @layerSelect %>");
</script>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function() { 

    $('#csvconf_f').click(function(event) {
      $(this).data('clicked',$(event.target))
    });
    
    function submit_resp(responseText, statusText, xhr, $form) {
      $('#csvconfout').html(responseText)
    }

    $('#csvconf_f').submit(function() { 
        if( $( $('#csvconf_f').data().clicked).attr('name') == 'add' ) {
          $(this).ajaxSubmit({
            url: '/csvheader?add=true'
            success: submit_resp 
          }); 
        } else {
          $(this).ajaxSubmit({
            success: submit_resp 
          }); 
        }
        
        return false; 
    }); 

  }); 

</script>

